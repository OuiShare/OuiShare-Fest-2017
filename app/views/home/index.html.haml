/ About the Fest
.blank_bg
  .container
    .second-section
      .row.centered
        .col-lg-6.col-lg-offset-3.col-md-8.col-md-offset-2
          %p.large{:style => 'margin-top: 1.8em;'}
            = t('dynamic_translations.about.landing_1')
          %br
          %p.large
            = t('dynamic_translations.about.landing_2')
          %br
      .row.centered.btn-space
        .col-md-6.col-md-offset-3
          %a{:href => 'about#_about'}
            %button.btn.btn-large.btn-primary
              = t('dynamic_translations.readmore.title')
      .row.centered.vspace#ouishare_video
        .col-md-8.col-md-offset-2{style:"position: relative"}
          %img{style:"display:block;width:100%;height:auto", src:"http://placehold.it/16x9"}
          %iframe{allowfullscreen: "", frameborder: "0", src: "//www.youtube.com/embed/zIr5t_-pRQU", style:"position:absolute;top:0;left:0;width:100%;height:100%"}


.blank_bg.vspace#news
  .container
    .row.centered
      %h3.ouishare_stencil
        = t('dynamic_translations.ouishare-news.title')
      %hr.pink
    .row{style:"padding-top: 3%"}

      - @magazines.each do |magazine|
        .col-md-4{style:"position: relative; min-height:170px;"}
          - if !magazine.content.split('img')[1].nil?
            .col-md-12
              %a{href: "#{magazine.url}", target:"blank"}
                %img{:src => "#{magazine.content.split(' ')[3].split('"')[1].gsub(/-150x150/, "")}", :u => "image"}
              .col-md-12
              %br
              %p
                %a{href: "#{magazine.url}", target:"blank"}
                  = magazine.name 
                %br
                  = "#{magazine.author}" unless magazine.author.blank?
          - else
            .col-md-12
              %a{href: "#{magazine.url}", target:"blank"}
                = image_tag "/assets/landing_logo.png", :style => "height:150px;"
            .col-md-12
              %br
              %p
                %a{href: "#{magazine.url}", target:"blank"}
                  = magazine.name
                %br
                  = "#{magazine.author}" unless magazine.author.blank?
            
    .row.centered.btn-space
      .col-md-12
        .col-md-6.col-md-offset-3
          %a{href: "http://magazine.ouishare.net/tag/ouisharefest/", :target => "_blank", :style => "width: 170px;"}
            %button.btn.btn-large.btn-primary
              = t('dynamic_translations.news.see_all')

